<div id="rilma-layer" style="position: fixed; top: 0; left: 0; width: 100vw; height: 100vh; background: #87CEEB; z-index: 999999; overflow: hidden; touch-action: none;">
    
    <div style="text-align: center; font-family: Arial; font-size: 28px; padding: 20px; color: white; text-shadow: 2px 2px #000;">
        PUNTOS: <span id="rilma-pts">0</span>
    </div>

    <div id="rilma-player" style="position: absolute; bottom: 50px; left: 50%; font-size: 60px; transform: translateX(-50%); transition: left 0.1s; pointer-events: none;">
        ğŸ‘©â€ğŸŒ¾
    </div>

</div>

<script>
(function() {
    var pts = 0;
    var layer = document.getElementById("rilma-layer");
    var player = document.getElementById("rilma-player");
    var ptsDisp = document.getElementById("rilma-pts");

    // Movimiento que detecta el dedo en toda la pantalla
    layer.addEventListener("touchmove", function(e) {
        var x = e.touches[0].clientX;
        player.style.left = x + "px";
        e.preventDefault();
    }, {passive: false});

    layer.addEventListener("mousemove", function(e) {
        player.style.left = e.clientX + "px";
    });

    function createFruit() {
        var f = document.createElement("div");
        f.innerHTML = "ğŸ";
        f.style.position = "absolute";
        f.style.top = "-60px";
        f.style.left = Math.random() * (window.innerWidth - 50) + "px";
        f.style.fontSize = "45px";
        layer.appendChild(f);

        var top = -60;
        var fall = setInterval(function() {
            top += 5;
            f.style.top = top + "px";

            // ColisiÃ³n
            var pRect = player.getBoundingClientRect();
            var fRect = f.getBoundingClientRect();

            if (fRect.bottom > pRect.top && fRect.left < pRect.right && fRect.right > pRect.left) {
                pts++;
                ptsDisp.innerHTML = pts;
                f.remove();
                clearInterval(fall);
            }

            if (top > window.innerHeight) {
                f.remove();
                clearInterval(fall);
            }
        }, 20);
    }

    // Crea una fruta cada segundo y medio
    setInterval(createFruit, 1500);
})();
</script>
